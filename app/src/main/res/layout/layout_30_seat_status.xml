<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/id_seat_status_Layout"
        android:background="@color/comm_bg"
        android:layout_width="@dimen/dp633"
        android:layout_height="@dimen/dp391">
        <RelativeLayout
            android:background="@drawable/_30_seat_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_seat"
                android:background="@drawable/_29_seat_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_seat_select"
                android:background="@drawable/_29_seat_base"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_backrest_select"
                android:background="@drawable/_29_seat_back"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_seat_forward"
                android:background="@drawable/_29_seat_base_front"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_toLeftOf="@+id/iv_seat"
                android:layout_below="@+id/iv_seat_up"/>
            <ImageView
                android:id="@+id/iv_seat_back"
                android:background="@drawable/_29_seat_base_rear"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_seat"
                android:layout_alignTop="@+id/iv_seat_forward"
                android:layout_marginStart="@dimen/dp_16"/>
            <ImageView
                android:id="@+id/iv_seat_up"
                android:background="@drawable/_29_seat_base_up"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp80"
                android:layout_alignLeft="@+id/iv_seat"
                android:layout_alignTop="@+id/iv_seat"/>
            <ImageView
                android:id="@+id/iv_seat_down"
                android:background="@drawable/_29_seat_base_down"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp60"
                android:layout_below="@+id/iv_seat_up"
                android:layout_alignLeft="@+id/iv_seat_up"/>
            <ImageView
                android:id="@+id/iv_backrest_up"
                android:background="@drawable/_29_seat_back_front"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp28"
                android:layout_alignTop="@+id/iv_seat"
                android:layout_marginStart="@dimen/dp40"
                android:layout_alignStart="@+id/iv_seat"/>
            <ImageView
                android:id="@+id/iv_backrest_down"
                android:background="@drawable/_29_seat_back_rear"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_alignTop="@+id/iv_backrest_up"
                android:layout_marginStart="@dimen/dp64"
                android:layout_toEndOf="@+id/iv_backrest_up"/>
            <ImageView
                android:id="@+id/iv_backrest_forward"
                android:background="@drawable/_29_seat_base_front"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp32"
                android:layout_below="@+id/iv_backrest_up"
                android:layout_alignStart="@+id/iv_backrest_up"/>
            <ImageView
                android:id="@+id/iv_backrest_back"
                android:background="@drawable/_29_seat_base_rear"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_backrest_forward"
                android:layout_marginStart="@dimen/dp32"
                android:layout_toEndOf="@+id/iv_backrest_forward"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
