<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/my360ScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/hg_360_zuo_di"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/front_360_View"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:src="@drawable/_306_360_front_view"/>
                <View
                    android:background="@drawable/fenge_02"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:alpha="0.3"/>
                <ImageView
                    android:id="@+id/rear_360_View"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:src="@drawable/_306_360_rear_view"/>
                <View
                    android:background="@drawable/fenge_02"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:alpha="0.3"/>
                <ImageView
                    android:id="@+id/left_360_View"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:src="@drawable/_306_360_left_view"/>
                <View
                    android:background="@drawable/fenge_02"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:alpha="0.3"/>
                <ImageView
                    android:id="@+id/right_360_View"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:src="@drawable/_306_360_right_view"/>
                <View
                    android:background="@drawable/fenge_02"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:alpha="0.3"/>
                <ImageView
                    android:id="@+id/d2_360_View"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:src="@drawable/_306_360_2d_view"/>
                <View
                    android:id="@+id/lineView"
                    android:background="@drawable/fenge_02"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:alpha="0.3"/>
                <ImageView
                    android:id="@+id/d3_360_View"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:src="@drawable/_306_360_3d_view"/>
                <View
                    android:background="@drawable/fenge_02"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:alpha="0.3"/>
                <ImageView
                    android:id="@+id/out_360_View"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:src="@drawable/_306_360_out_view"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/avm_alert_view"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="@string/_383_avm_alert"/>
    </LinearLayout>
</RelativeLayout>
