<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_channel"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/v_center"
            style="@style/TvEqStyle"/>
        <View
            android:id="@+id/v_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_channel_value"
            android:text="0"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/v_center"
            style="@style/TvEqStyleAccent"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:src="@drawable/eq_reduce_btn_selector"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/seekbar"/>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/can_eq1_left_ic_slid_n_03"
            android:thumb="@drawable/can_eq1_left_ic_slid_p_03"
            android:layout_centerInParent="true"
            android:splitTrack="false"/>
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:src="@drawable/eq_add_btn_selector"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/seekbar"/>
    </RelativeLayout>
</LinearLayout>
