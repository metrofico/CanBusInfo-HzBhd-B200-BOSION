<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_right_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_air_r_seat"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/iv_right_blow_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp10"
        android:layout_alignTop="@+id/iv_right_seat"
        android:layout_alignRight="@+id/iv_right_seat"/>
    <ImageView
        android:id="@+id/iv_right_blow_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp10"
        android:layout_alignTop="@+id/iv_right_seat"
        android:layout_alignRight="@+id/iv_right_seat"/>
    <ImageView
        android:id="@+id/iv_right_blow_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:layout_alignTop="@+id/iv_right_seat"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_right_blow_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp15"
        android:layout_alignRight="@+id/iv_right_seat"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_right_back"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_right_seat"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_right_bottom"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_right_seat"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
