<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/dz_vehicle_information_top_bg"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_283_air_setting"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="77dp"
            android:layout_height="50dp"
            android:src="@drawable/_283_main_setting_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="64dp"/>
    </RelativeLayout>
    <com.hzbhd.canbus.car_cus._283.view.SettingSelectView
        android:id="@+id/sync_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:setting_title="@string/_283_seat_wheel_hot"/>
    <com.hzbhd.canbus.car_cus._283.view.SettingSelectView
        android:id="@+id/ssv_auto_defogging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:setting_title="前窗自动去雾"/>
    <com.hzbhd.canbus.car_cus._283.view.SettingSelectView
        android:id="@+id/ssv_auto_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:setting_title="自动内外循环"/>
    <com.hzbhd.canbus.car_cus._283.view.SettingDialogView
        android:id="@+id/sdv_temp_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:setting_title="@string/_283_air_temp_interval"/>
</LinearLayout>
