<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/_333_frame"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/hours_up"
                    android:background="@drawable/ic_air_m_temp1_n"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="Hours"/>
                <Button
                    android:id="@+id/hours_down"
                    android:background="@drawable/ic_air_m_temp1_n2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/minute_up"
                    android:background="@drawable/ic_air_m_temp1_n"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="minute"/>
                <Button
                    android:id="@+id/minute_down"
                    android:background="@drawable/ic_air_m_temp1_n2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/is24"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:buttonTint="@color/colorAccent"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="24-hour system"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp">
            <Button
                android:id="@+id/ok"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:text="ok"
                android:backgroundTint="@color/colorAccent"/>
            <Button
                android:id="@+id/cancel"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:text="Exit"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
