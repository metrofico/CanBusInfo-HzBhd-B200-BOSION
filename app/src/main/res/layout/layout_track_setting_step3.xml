        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_top_padding">
        <TextView
            android:textSize="@dimen/text_size_3"
            android:textColor="@android:color/white"
            android:id="@+id/reverse_line_horizontal_rotate_title"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:text="@string/track_learn_rotate_x"/>
        <TextView
            android:textSize="@dimen/text_size_3"
            android:textColor="@android:color/white"
            android:id="@+id/reverse_line_horizontal_rotate_value"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:text="1.8"/>
        <SeekBar
            android:id="@+id/reverse_line_horizontal_rotate_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_top_padding">
        <TextView
            android:textSize="@dimen/text_size_3"
            android:textColor="@android:color/white"
            android:id="@+id/reverse_line_horizontal_move_title"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:text="@string/track_learn_move_x"/>
