            android:id="@+id/reverse_line_vertical_move_value"
            android:layout_width="50px"
            android:layout_height="wrap_content"
            android:text="1.8"/>
        <SeekBar
            android:id="@+id/reverse_line_vertical_move_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
