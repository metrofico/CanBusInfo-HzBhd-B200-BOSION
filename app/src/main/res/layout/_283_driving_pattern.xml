<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:src="@drawable/dz_driv_blue_dot"
        android:layout_centerInParent="true"/>
    <RadioGroup
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:id="@+id/radioButton_comfort"
            android:background="@drawable/_283_driving_pattern_1"
            android:text="@string/_283_driving_pattern_1"
            style="@style/_283_driving_pattern_radiobutton"/>
        <RadioButton
            android:id="@+id/radioButton_standard"
            android:background="@drawable/_283_driving_pattern_2"
            android:text="@string/_283_driving_pattern_2"
            style="@style/_283_driving_pattern_radiobutton"/>
        <RadioButton
            android:id="@+id/radioButton_sport"
            android:background="@drawable/_283_driving_pattern_3"
            android:text="@string/_283_driving_pattern_3"
            style="@style/_283_driving_pattern_radiobutton"/>
        <RadioButton
            android:id="@+id/radioButton_economics"
            android:background="@drawable/_283_driving_pattern_4"
            android:text="@string/_283_driving_pattern_4"
            style="@style/_283_driving_pattern_radiobutton"/>
        <RadioButton
            android:id="@+id/radioButton_custom"
            android:background="@drawable/_283_driving_pattern_5"
            android:text="@string/_283_driving_pattern_5"
            style="@style/_283_driving_pattern_radiobutton"/>
        <RadioButton
            android:id="@+id/radioButton_cross_country"
            android:background="@drawable/_283_driving_pattern_6"
            android:text="@string/_283_driving_pattern_6"
            style="@style/_283_driving_pattern_radiobutton"/>
        <RadioButton
            android:id="@+id/radioButton_snowfield"
            android:background="@drawable/_283_driving_pattern_7"
            android:text="@string/_283_driving_pattern_7"
            android:layout_marginEnd="0dp"
            style="@style/_283_driving_pattern_radiobutton"/>
    </RadioGroup>
    <TextView
        android:textSize="26dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_283_driving_tips"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/person_setting"
        android:visibility="gone"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginBottom="26dp"
        android:src="@drawable/_283_car_person_setting_click"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
