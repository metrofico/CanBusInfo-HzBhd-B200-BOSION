<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/ic_navi_bar_top_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp84">
    <TextView
        android:textSize="@dimen/dp40"
        android:textColor="@color/ic_btn_text"
        android:gravity="center"
        android:id="@+id/ic_navi"
        android:background="@drawable/selector_navigation_top"
        android:layout_width="@dimen/dp204"
        android:layout_height="@dimen/dp84"
        android:singleLine="true"/>
    <TextView
        android:textSize="@dimen/dp40"
        android:textColor="@color/ic_btn_text"
        android:gravity="center"
        android:id="@+id/ic_radio"
        android:background="@drawable/selector_radio_top"
        android:layout_width="@dimen/dp204"
        android:layout_height="@dimen/dp84"
        android:singleLine="true"/>
    <TextView
        android:textSize="@dimen/dp40"
        android:textColor="@color/ic_btn_text"
        android:gravity="center"
        android:id="@+id/ic_phone"
        android:background="@drawable/selector_bluetooth_top"
        android:layout_width="@dimen/dp204"
        android:layout_height="@dimen/dp84"
        android:singleLine="true"/>
    <TextView
        android:textSize="@dimen/dp40"
        android:textColor="@color/ic_btn_text"
        android:gravity="center"
        android:id="@+id/ic_media"
        android:background="@drawable/selector_mmx_top"
        android:layout_width="@dimen/dp204"
        android:layout_height="@dimen/dp84"
        android:singleLine="true"/>
    <TextView
        android:textSize="@dimen/dp40"
        android:textColor="@color/ic_btn_text"
        android:gravity="center"
        android:id="@+id/ic_setting"
        android:background="@drawable/selector_set_top"
        android:layout_width="@dimen/dp204"
        android:layout_height="@dimen/dp84"
        android:singleLine="true"/>
</LinearLayout>
