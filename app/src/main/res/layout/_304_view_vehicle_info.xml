<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_vehicle"
            android:layout_width="@dimen/dp436"
            android:layout_height="@dimen/dp378"
            android:src="@drawable/_304_examined_vehicle"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/dp32"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_driving_endurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[行车续航]"/>
            <TextView
                android:textSize="@dimen/dp28"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp30"
                android:text="续航里程"/>
            <TextView
                android:textSize="@dimen/dp24"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20"
                android:text="0.0 KM"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
