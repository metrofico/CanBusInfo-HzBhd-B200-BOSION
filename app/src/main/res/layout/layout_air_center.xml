<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hzbhd.canbus.view.TempSetView
        android:id="@+id/tsv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_left_seat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_air_l_seat"
        android:layout_weight="1"/>
    <com.hzbhd.canbus.view.TempSetView
        android:id="@+id/tsv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_right_seat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_air_r_seat"
        android:layout_weight="1"/>
    <com.hzbhd.canbus.view.TempSetView
        android:id="@+id/tsv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
