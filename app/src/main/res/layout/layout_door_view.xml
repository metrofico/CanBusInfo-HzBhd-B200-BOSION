<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_door"
        android:layout_width="266dp"
        android:background="@drawable/background_door_view"
        android:layout_height="410dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_car_body"
            android:layout_width="162dp"
            android:layout_height="349dp"
            android:layout_centerInParent="true"
            android:background="@drawable/car_body_bg" />

        <ImageView
            android:id="@+id/iv_left_front"
            android:layout_width="79dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="131dp"
            android:background="@drawable/car_door_front_left_off" />

        <ImageView
            android:id="@+id/iv_left_rear"
            android:layout_width="79dp"
            android:layout_height="87dp"
            android:layout_below="@+id/iv_left_front"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="-19dp"
            android:background="@drawable/car_door_rear_left_off" />

        <ImageView
            android:id="@+id/iv_right_front"
            android:layout_width="79dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="133dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/car_door_front_right_off" />

        <ImageView
            android:id="@+id/iv_right_rear"
            android:layout_width="79dp"
            android:layout_height="87dp"
            android:layout_below="@+id/iv_right_front"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-19dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/car_door_rear_right_off" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="124dp"
            android:layout_height="66dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:background="@drawable/car_door_front_hood"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="108dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325dp"
            android:background="@drawable/car_back_trunk"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_sky_window"
            android:layout_width="78dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="209dp"
            android:background="@drawable/car_door_skylight_off" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rl_door"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_seat_belt"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/belt_on" />

        <TextView
            android:id="@+id/tv_seat_belt_sub"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/belt_on" />

        <TextView
            android:id="@+id/tv_handbrake"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/handbreak_off" />

        <TextView
            android:id="@+id/tv_esp"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/esp_n" />

        <TextView
            android:id="@+id/tv_istop"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/istop_n" />

        <TextView
            android:id="@+id/tv_little_light"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/small_light_n" />

        <TextView
            android:id="@+id/tv_water_temp_warning"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/water_warning_n" />

        <TextView
            android:id="@+id/tv_battery_warning"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/battery_on" />

        <TextView
            android:id="@+id/tv_fuel_warning"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/fuel_on" />

        <TextView
            android:id="@+id/tv_washing_fluid_warning"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/water_on" />

        <TextView
            android:id="@+id/tv_seat_belt_master"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/belt_on" />

        <TextView
            android:id="@+id/tv_seat_belt_co_Pilot"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/belt_on" />

        <TextView
            android:id="@+id/tv_seat_belt_r_l"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/belt_on" />

        <TextView
            android:id="@+id/tv_seat_belt_r_m"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/belt_on" />

        <TextView
            android:id="@+id/tv_seat_belt_r_r"
            style="@style/TvDoorTisStyle"
            android:drawableStart="@drawable/belt_on" />
    </LinearLayout>
</RelativeLayout>
