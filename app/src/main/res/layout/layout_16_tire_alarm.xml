<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#373737"
        android:layout_width="@dimen/dp460"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/dp24"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_alarm"
            android:padding="@dimen/dp50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_16_tire_alarm"/>
        <View
            android:background="@color/canbus_ui_main_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_below="@+id/tv_alarm"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_below="@+id/tv_alarm">
            <TextView
                android:textSize="@dimen/dp20"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_no"
                android:background="@drawable/canbus_main_selector"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:text="@string/hiworld_jeep_123_item_39"
                android:layout_weight="1"/>
            <View
                android:background="@color/canbus_ui_main_color"
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="@dimen/dp20"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_yes"
                android:background="@drawable/canbus_main_selector"
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:text="@string/hiworld_jeep_123_item_38"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
