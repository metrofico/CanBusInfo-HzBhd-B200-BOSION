<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/control_view_scr"
            android:background="#2b2b2b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/modular1_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/ford_sync_icon_134"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="8dp"/>
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/_436_DVR_MODE1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/modular2_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/ford_sync_icon_73"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="8dp"/>
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/_436_DVR_MODE2"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/modular3_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/ford_sync_icon_150"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="8dp"/>
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/_436_DVR_MODE3"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/modular4_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/ford_sync_icon_132"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_margin="8dp"/>
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/_436_DVR_MODE4"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/emergency_backup_lin"
                    android:background="@drawable/_436_setting_dialog_frame"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="12dp">
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/my_P_Key"
                        android:background="#da8200"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/_436_DVR_bf"
                        android:layout_weight="2"/>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/ford_sync_icon_168"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:id="@+id/dvr_fragment"
            android:background="@color/black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
