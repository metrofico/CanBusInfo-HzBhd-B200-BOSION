<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_left_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_air_l_seat"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/iv_left_blow_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/iv_left_seat"
        android:layout_alignTop="@+id/iv_left_seat"/>
    <ImageView
        android:id="@+id/iv_left_blow_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/iv_left_seat"
        android:layout_alignTop="@+id/iv_left_seat"/>
    <ImageView
        android:id="@+id/iv_left_blow_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/iv_left_seat"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_left_blow_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignLeft="@+id/iv_left_seat"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_left_back"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_air_m_co1"
        android:layout_alignRight="@+id/iv_left_seat"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_left_bottom"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_air_m_co"
        android:layout_alignBottom="@+id/iv_left_seat"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
