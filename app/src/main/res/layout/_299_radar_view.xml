<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:background="#b3000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp380"
        android:layout_height="@dimen/dp544"
        android:layout_centerVertical="true"
        android:scaleX="@dimen/_299_radar_scale"
        android:scaleY="@dimen/_299_radar_scale">
        <ImageView
            android:id="@+id/front_radar_left"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp128"
            android:layout_marginTop="@dimen/dp79"
            android:layout_marginStart="@dimen/dp57"/>
        <ImageView
            android:id="@+id/front_radar_left_mid"
            android:layout_width="@dimen/dp84"
            android:layout_height="@dimen/dp128"
            android:layout_marginTop="@dimen/dp79"
            android:layout_marginStart="@dimen/dp106"/>
        <ImageView
            android:id="@+id/front_radar_right_mid"
            android:layout_width="@dimen/dp84"
            android:layout_height="@dimen/dp128"
            android:layout_marginTop="@dimen/dp79"
            android:layout_marginEnd="@dimen/dp106"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/front_radar_right"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp128"
            android:layout_marginTop="@dimen/dp79"
            android:layout_marginEnd="@dimen/dp57"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/rear_radar_left"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp128"
            android:layout_marginBottom="@dimen/dp100"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp57"/>
        <ImageView
            android:id="@+id/rear_radar_left_mid"
            android:layout_width="@dimen/dp84"
            android:layout_height="@dimen/dp128"
            android:layout_marginBottom="@dimen/dp100"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp106"/>
        <ImageView
            android:id="@+id/rear_radar_right_mid"
            android:layout_width="@dimen/dp84"
            android:layout_height="@dimen/dp128"
            android:layout_marginBottom="@dimen/dp100"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp106"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/rear_radar_right"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp128"
            android:layout_marginBottom="@dimen/dp100"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp57"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="@dimen/dp321"
            android:layout_height="@dimen/dp360"
            android:src="@drawable/dz_baom_img_car"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
