<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout"
    android:background="@drawable/setting_list_bg_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:background="@color/transparent"
        style="@style/TvSettingItemLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/sw_status">
            <TextView
                android:id="@+id/tv_title"
                style="@style/TvSettingItemTitle"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_value"
            android:layout_alignParentEnd="true"
            style="@style/TvSettingItemValue"/>
        <Switch
            android:id="@+id/sw_status"
            android:clickable="false"
            android:layout_alignTop="@+id/tv_value"
            android:layout_alignBottom="@+id/tv_value"
            android:layout_alignParentEnd="true"
            style="@style/SwitchStyle"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_divider"
        android:layout_below="@+id/rl_layout"/>
</RelativeLayout>
