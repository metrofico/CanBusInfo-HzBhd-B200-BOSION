<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/monitorRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:textSize="@dimen/dp20"
        android:textColor="@color/white"
        android:id="@+id/monitor_front_camera"
        android:background="@drawable/camera_ico_n01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前置摄像头"
        android:paddingStart="@dimen/dp50"/>
    <Button
        android:textSize="@dimen/dp20"
        android:textColor="@color/white"
        android:id="@+id/monitor_center_camera"
        android:background="@drawable/camera_ico_n01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中置摄像头"
        android:layout_toRightOf="@+id/monitor_front_camera"
        android:paddingStart="@dimen/dp50"
        android:layout_marginStart="@dimen/dp32"
        android:layout_marginEnd="@dimen/dp32"/>
    <Button
        android:id="@+id/monitor_back_camera"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="倒车摄像头"
        android:layout_toRightOf="@+id/monitor_center_camera"/>
    <View
        android:id="@+id/monitor_bgView"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
