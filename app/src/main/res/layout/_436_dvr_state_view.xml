<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:background="@drawable/_436_setting_item_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp20">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@+id/sd_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp20"
                    android:text="SD卡状态标记: SD卡需要格式化"/>
                <Button
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/format_sd_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp20"
                    android:text="立即格式化"
                    android:backgroundTint="@color/red"/>
            </LinearLayout>
            <TextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/connect_txt"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:text="通信状态:"/>
            <TextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/lock_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:text="录像锁定:"/>
            <TextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/tag_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:text="记录仪模块升级标记:"/>
            <TextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/time_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:text="行车记录仪系统时间："/>
            <TextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/version_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"
                android:text="版本信息："/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
