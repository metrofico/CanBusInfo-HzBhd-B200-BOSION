<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/swc_reset_bg"
    android:layout_width="@dimen/dp480"
    android:layout_height="@dimen/dp289">
    <ImageView
        android:layout_width="@dimen/dp69"
        android:layout_height="@dimen/dp60"
        android:layout_marginTop="@dimen/dp32"
        android:src="@drawable/swc_reset_tips_icon"/>
    <TextView
        android:textSize="@dimen/dp36"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp28"
        android:text="@string/swc_btn_reset"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp36">
        <Button
            android:textSize="@dimen/dp20"
            android:textColor="@android:color/white"
            android:id="@+id/btn_confirm"
            android:background="@drawable/selector_swc_button"
            android:layout_width="@dimen/dp196"
            android:layout_height="@dimen/dp56"
            android:text="@string/swc_confirm_ok"/>
        <Button
            android:textSize="@dimen/dp20"
            android:textColor="@android:color/white"
            android:id="@+id/btn_cancel"
            android:background="@drawable/selector_swc_button"
            android:layout_width="@dimen/dp196"
            android:layout_height="@dimen/dp56"
            android:text="@string/swc_confirm_cancel"
            android:layout_marginStart="@dimen/dp16"/>
    </LinearLayout>
</LinearLayout>
