<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_air_temperature"
        android:layout_width="304dp"
        android:layout_height="304dp"
        android:layout_marginStart="-152dp">
        <ImageView
            android:layout_width="158dp"
            android:layout_height="304dp"
            android:src="@drawable/_304_air_temperaure_bg"
            android:layout_marginEnd="-6dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18â„ƒ"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/temperature_center"/>
        <View
            android:id="@+id/temperature_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>
        <RelativeLayout
            android:id="@+id/rl_indicator"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerInParent="true"
            android:rotation="160">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/_304_air_temperature_indicator"
                android:layout_centerHorizontal="true"
                android:rotation="180"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
