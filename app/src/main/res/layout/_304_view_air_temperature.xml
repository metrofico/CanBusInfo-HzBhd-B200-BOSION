<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_air_temperature"
        android:layout_width="@dimen/dp304"
        android:layout_height="@dimen/dp304"
        android:layout_marginStart="@dimen/dp_152">
        <ImageView
            android:layout_width="@dimen/dp158"
            android:layout_height="@dimen/dp304"
            android:src="@drawable/_304_air_temperaure_bg"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="@dimen/dp32"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18â„ƒ"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp12"
            android:layout_toEndOf="@+id/temperature_center"/>
        <View
            android:id="@+id/temperature_center"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            android:layout_centerInParent="true"/>
        <RelativeLayout
            android:id="@+id/rl_indicator"
            android:layout_width="@dimen/dp220"
            android:layout_height="@dimen/dp220"
            android:layout_centerInParent="true"
            android:rotation="160">
            <ImageView
                android:layout_width="@dimen/dp24"
                android:layout_height="@dimen/dp24"
                android:src="@drawable/_304_air_temperature_indicator"
                android:layout_centerHorizontal="true"
                android:rotation="180"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
