<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_center_car"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tire_car_height"
        android:layout_marginTop="@dimen/dp20"
        android:src="@drawable/img_tire_m_n"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/v_center"
        android:layout_width="@dimen/tire_center_view_width"
        android:layout_height="@dimen/tire_center_view_height"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_tire_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp100"
        android:src="@drawable/icon_tire_tire_n"
        android:layout_toLeftOf="@+id/v_center"
        android:layout_alignBaseline="@+id/v_center"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info_0"
        android:layout_marginTop="@dimen/dp40"
        android:layout_marginRight="@dimen/dp50"
        android:layout_toLeftOf="@+id/iv_tire_0"
        style="@style/TirInfoRv"/>
    <ImageView
        android:id="@+id/iv_tire_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp100"
        android:src="@drawable/icon_tire_tire_n"
        android:layout_toRightOf="@+id/v_center"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info_1"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginTop="@dimen/dp40"
        android:layout_toRightOf="@+id/iv_tire_1"
        style="@style/TirInfoRv"/>
    <ImageView
        android:id="@+id/iv_tire_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp40"
        android:src="@drawable/icon_tire_tire_n"
        android:layout_toLeftOf="@+id/v_center"
        android:layout_below="@+id/v_center"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info_2"
        android:layout_marginRight="@dimen/dp50"
        android:layout_toLeftOf="@+id/iv_tire_2"
        android:layout_below="@+id/v_center"
        style="@style/TirInfoRv"/>
    <ImageView
        android:id="@+id/iv_tire_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp40"
        android:src="@drawable/icon_tire_tire_n"
        android:layout_toRightOf="@+id/v_center"
        android:layout_below="@+id/v_center"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info_3"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_toRightOf="@+id/iv_tire_3"
        android:layout_below="@+id/v_center"
        style="@style/TirInfoRv"/>
    <ImageView
        android:id="@+id/iv_tire_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp90"
        android:src="@drawable/icon_tire_sparetire_n"
        android:layout_below="@+id/v_center"
        android:layout_centerHorizontal="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info_4"
        android:layout_width="@dimen/dp350"
        android:layout_height="@dimen/dp100"
        android:layout_marginTop="@dimen/tire_4_margin_top"
        android:layout_below="@+id/v_center"
        android:layout_centerHorizontal="true"
        style="@style/TirInfoRv"/>
    <RelativeLayout
        android:id="@+id/rl_no_tire_pressure_info_layout"
        android:background="@drawable/img_tire_pop_bg_n"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/dp20"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_tire_pressure_info"
            android:drawableTop="@drawable/img_tire_pop_img_warm_n"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
