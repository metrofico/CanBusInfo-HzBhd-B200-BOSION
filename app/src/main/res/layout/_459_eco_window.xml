<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#41000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/_459_alert_bg"
        android:layout_width="436px"
        android:layout_height="234px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="26px"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="18px"
            android:text="是否开启超级省电模式"/>
        <TextView
            android:textSize="20px"
            android:gravity="center"
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:text="开启后将限制车辆性能，延长续航里程。"/>
        <TextView
            android:textSize="20px"
            android:gravity="center"
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:text="10秒后自动取消"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78px">
            <Button
                android:textSize="20px"
                android:textColor="@color/black"
                android:id="@+id/cancel"
                android:background="@drawable/__459__alert_left_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginBottom="4px"
                android:text="取消"
                android:layout_weight="1"/>
            <Button
                android:textSize="20px"
                android:textColor="@color/black"
                android:id="@+id/ok"
                android:background="@drawable/__459__alert_right_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8px"
                android:layout_marginBottom="4px"
                android:text="确认"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
