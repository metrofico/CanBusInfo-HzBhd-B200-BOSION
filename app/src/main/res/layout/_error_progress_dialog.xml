<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/running_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView2"
                android:background="@drawable/ic_launcher"
                android:visibility="visible"
                android:layout_width="108dp"
                android:layout_height="108dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ProgressBar
                android:id="@+id/mProgressBar"
                android:visibility="visible"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:indeterminateDrawable="@drawable/progress_design"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/number_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mProgressBar"
            app:layout_constraintVertical_bias="0">
            <Button
                android:textSize="26dp"
                android:textColor="@color/white"
                android:id="@+id/pause"
                android:visibility="visible"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="暂停"
                android:backgroundTint="@color/red"/>
            <Button
                android:textSize="26dp"
                android:textColor="@color/white"
                android:id="@+id/continue_btn"
                android:visibility="gone"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="继续"
                android:backgroundTint="@color/red"/>
            <Button
                android:textSize="26dp"
                android:textColor="@color/white"
                android:id="@+id/cancel_btn"
                android:visibility="visible"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:backgroundTint="@color/red"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/success_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView"
                android:background="@drawable/debug_can_bus_success"
                android:visibility="visible"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <Button
                android:textSize="20dp"
                android:textColor="@color/white"
                android:id="@+id/ok_success"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成功! 退出"
                android:backgroundTint="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
