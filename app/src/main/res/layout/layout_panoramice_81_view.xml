<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/dp24"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_message"
        android:background="#1111"
        android:padding="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_left_radar"
        android:background="#1111"
        android:visibility="gone"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp150"
        android:layout_marginTop="@dimen/dp16"
        android:src="@drawable/_81_active_park_left_wave"
        android:layout_alignTop="@+id/tv_message"
        android:layout_marginStart="@dimen/dp64"/>
    <ImageView
        android:id="@+id/iv_left_stop"
        android:background="#1111"
        android:visibility="gone"
        android:layout_width="@dimen/dp46"
        android:layout_height="@dimen/dp46"
        android:layout_marginTop="@dimen/dp16"
        android:src="@drawable/ford_pa_stop"
        android:layout_alignTop="@+id/tv_message"
        android:layout_marginStart="@dimen/dp64"/>
    <TextView
        android:textSize="@dimen/dp64"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_left_reverse"
        android:background="#1111"
        android:visibility="gone"
        android:layout_width="@dimen/dp72"
        android:layout_height="@dimen/dp108"
        android:layout_marginTop="@dimen/dp16"
        android:text="R"
        android:layout_alignTop="@+id/tv_message"
        android:layout_marginStart="@dimen/dp64"/>
    <ImageView
        android:id="@+id/iv_left_forward"
        android:background="#1111"
        android:visibility="gone"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp96"
        android:layout_marginTop="@dimen/dp16"
        android:src="@drawable/_81_forward"
        android:layout_alignTop="@+id/tv_message"
        android:layout_marginStart="@dimen/dp64"/>
    <ImageView
        android:id="@+id/iv_left_backward"
        android:background="#1111"
        android:visibility="gone"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp96"
        android:layout_marginTop="@dimen/dp16"
        android:src="@drawable/_81_backward"
        android:layout_alignTop="@+id/tv_message"
        android:layout_marginStart="@dimen/dp64"/>
    <ImageView
        android:id="@+id/iv_right_radar"
        android:visibility="gone"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp150"
        android:layout_marginTop="@dimen/dp16"
        android:src="@drawable/_81_active_park_right_wave"
        android:layout_alignTop="@+id/tv_message"
        android:layout_marginEnd="@dimen/dp64"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ll_alert"
        android:background="#1111"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/_81_alert_bg"
            android:layout_width="@dimen/dp400"
            android:layout_height="@dimen/dp300">
            <ImageView
                android:id="@+id/iv_alert_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp32"
                android:src="@drawable/ic_parking_warning"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/dp32"
                android:textColor="@color/white"
                android:id="@+id/tv_be_careful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:text="@string/_81_be_careful"
                android:layout_below="@+id/iv_alert_icon"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/dp28"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_alert_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_below="@+id/tv_be_careful"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
