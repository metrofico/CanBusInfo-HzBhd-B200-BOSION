<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp72">
        <TextView
            android:textSize="@dimen/dp28"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_304_pedestrain_reminder"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp72"/>
        <ImageButton
            android:id="@+id/ib_switch"
            android:background="@color/transparent"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp36"
            android:src="@drawable/_304_selector_assistance_item_switch"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp32"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:layout_width="@dimen/dp1024"
            android:layout_height="@dimen/dp2"
            android:src="@drawable/_304_assistance_item_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/vechiel_type_select"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp56"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
