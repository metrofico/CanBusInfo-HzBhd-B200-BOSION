<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <TextView
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_304_pedestrain_reminder"
            android:layout_centerVertical="true"
            android:layout_marginStart="72dp"/>
        <ImageButton
            android:id="@+id/ib_switch"
            android:background="@color/transparent"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:src="@drawable/_304_selector_assistance_item_switch"
            android:layout_centerVertical="true"
            android:layout_marginEnd="32dp"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:layout_width="1024dp"
            android:layout_height="2dp"
            android:src="@drawable/_304_assistance_item_divider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/vechiel_type_select"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
