<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/_333_frame"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:background="@drawable/ic_parking_warning"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="60dp"
            android:text="@string/_open_bugly_text"/>
        <EditText
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:gravity="center"
            android:id="@+id/pass_word"
            android:background="@drawable/shape_onstar_remain_time_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/_open_bugly_hint"
            android:password="false"
            android:singleLine="true"
            android:layout_weight="1"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffb343"
            android:id="@+id/open"
            android:background="#00ffffff"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:text="@string/_open_bugly"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
