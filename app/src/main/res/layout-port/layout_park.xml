<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cameraView"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_height"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/view_cus_panoramic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.hzbhd.canbus.park.panoramic.PanoramicView
            android:id="@+id/view_panoramic"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_camera_tis"
            style="@style/CameraTisStyle"/>
    </RelativeLayout>
    <View
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"/>
    <RelativeLayout
        android:id="@+id/radar_all_page"
        android:background="@drawable/park_radar_bg_port"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top">
        <ImageView
            android:background="@drawable/park_radar_icon_port"
            android:layout_width="47dp"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/park_tips_port"
            android:layout_marginStart="91dp"/>
        <com.hzbhd.canbus.park.radar.RadarView
            android:id="@+id/view_radar"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="@dimen/radar_scale_x"
            android:scaleY="@dimen/radar_scale_y"/>
    </RelativeLayout>
    <com.hzbhd.canbus.park.external360cam.IrCam360MaylasiaView
        android:id="@+id/view_external_360_cam_my"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
